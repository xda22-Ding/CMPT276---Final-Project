<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddChildActivity">

    <TextView
        android:id="@+id/txt_addChildActivity"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:text="@string/add_child"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/txt_enterChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="@string/EnterChildName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/profileImage"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/profileImage"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <Button
        android:id="@+id/btn_changeProfileImage"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:text="@string/change_profile"
        app:layout_constraintEnd_toEndOf="@+id/txt_enterChildName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_enterChildName"
        app:layout_constraintTop_toBottomOf="@+id/txt_enterChildName" />

    <Button
        android:id="@+id/btn_saveChild"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/save_child"
        app:layout_constraintEnd_toEndOf="@+id/btn_changeProfileImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_changeProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/btn_changeProfileImage" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_saveChild"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_saveChild"
        app:layout_constraintTop_toBottomOf="@+id/btn_saveChild"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btn_AddChildCamera"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:text="@string/camera"
        app:layout_constraintBottom_toBottomOf="@+id/btn_changeProfileImage"
        app:layout_constraintStart_toEndOf="@+id/btn_changeProfileImage"
        app:layout_constraintTop_toTopOf="@+id/btn_changeProfileImage"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>