<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TakeBreathActivity">

    <Button
        android:id="@+id/btn_takeBreathBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <TextView
        android:id="@+id/txt_beginMessage"
        android:layout_width="212dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:text="Number of breaths"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_takeBreathBegin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631" />

    <Spinner
        android:id="@+id/spinner_numBreaths"
        android:layout_width="153dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_beginMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_beginMessage"
        app:layout_constraintTop_toTopOf="@+id/txt_beginMessage"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_takeBreathStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Start"
        app:layout_constraintEnd_toEndOf="@+id/btn_takeBreathBegin"
        app:layout_constraintStart_toStartOf="@+id/btn_takeBreathBegin"
        tools:layout_editor_absoluteY="495dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
