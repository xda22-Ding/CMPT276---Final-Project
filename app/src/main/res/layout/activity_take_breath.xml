<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TakeBreathActivity">

    <TextView
        android:id="@+id/txt_beginMessage"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="@string/number_of_breaths"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_numBreaths"
        android:layout_width="98dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_beginMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_beginMessage"
        app:layout_constraintTop_toTopOf="@+id/txt_beginMessage"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_takeBreathStart"
        android:layout_width="151dp"
        android:layout_height="98dp"
        android:text="@string/begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_numBreaths"
        app:layout_constraintVertical_bias="0.556" />

    <TextView
        android:id="@+id/txt_beginMessage2"
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:text="breath together"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_numBreaths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner_numBreaths"
        app:layout_constraintTop_toTopOf="@+id/spinner_numBreaths"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
